@model ExpenseWeb.Models.ExpenseStatisticsViewModel
@if (Model == null)
{
    <p>
        Er zijn nog geen uitgaven toegevoegd!
    </p>
}
else
{
    <table>
        <tr>
            <th style="width:200px">
                Totaal duurste dag
            </th>
            <th style="width:200px">
                Dag
            </th>
        </tr>
        <tr>
            <td>
                € @Model.Bedrag
            </td>
            <td>
                @Model.Datum
            </td>
        </tr>
    </table>
}