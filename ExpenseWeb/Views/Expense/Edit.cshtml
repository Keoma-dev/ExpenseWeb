@model ExpenseWeb.Models.ExpenseEditViewModel

<form asp-controller="expense" asp-action="edit" method="post">
    <div class="form-group">
        <label asp-for="Omschrijving"></label>
        <input class="form-control" asp-for="Omschrijving" />
    </div>

    <div class="form-group">
        <label asp-for="Datum"></label>
        <input class="form-group" asp-for="Datum" />
    </div>

    <div class="form-group">
        <label asp-for="Bedrag"></label>
        <input class="form-group" asp-for="Bedrag" />
    </div>

    <button class="btn btn-primary" type="submit" style="background-color:green">Pas Uitgave Aan</button>
</form>