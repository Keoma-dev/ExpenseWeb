@model IEnumerable<ExpenseListViewModel>


<table>
    <tr>
        <th style="width:inherit">
            Omschrijving
        </th>
        <th style="width:100px">
            Bedrag
        </th>
        <th style="width:200px">
            Datum
        </th>
    </tr>
 @if (Model.Count() > 0)
 {
    @foreach (var expense in Model)
    {
        <tr>
            <td>
                 @expense.Omschrijving
            </td>
            <td>
                 € @expense.Bedrag 
            </td>
            <td>
                 @expense.Datum
            </td>
            <td>
                <button class="btn btn-primary" style="background-color:red">Verwijder</button>
            </td>
            <td>
                <button class="btn btn-primary" style="background-color:green">Pas Aan</button>
            </td>
        </tr>
    }
 }
 else
 {
     <tr>
         <td>
             Er zijn nog geen uitgaven toegevoegd!
         </td>
     </tr>
 }
</table>